<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.calculator.MainActivity"
    android:background="@color/abc_search_url_text_selected">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/textView1"
                android:layout_gravity="center_horizontal"
                android:textSize="50dp"
                android:textColor="#fefcfc"
                android:textAlignment="textEnd"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="AC"
                android:id="@+id/clear"
                android:layout_weight="1"
                android:background="#9c9595"
                android:textSize="30dp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+/-"
                android:id="@+id/negative"
                android:layout_weight="1"
                android:background="#c49594"
                android:textSize="30dp"
                android:focusable="true"
                 />
            <!--android:breakStrategy="high_quality"-->
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="%"
                android:id="@+id/precentage"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#f1e9e9" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="/"
                android:id="@+id/divide"
                android:layout_weight="1"
                android:background="#f3880e"
                android:textSize="30dp" />
        </LinearLayout>
        <!--android:textColorHighlight="#da0707"-->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/seven"
                android:layout_weight="1"
                android:background="#8afa51"
                android:textSize="30dp"/>


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/eight"
                android:layout_weight="1"
                android:background="#f7f30b"
                android:textSize="30dp" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/nine"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#8afa51" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="*"
                android:id="@+id/multi"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#f4d108" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/four"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#f7f30b" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/five"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#1af9d4" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/six"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#f7f30b" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/subtract"
                android:layout_weight="1"
                android:textSize="33sp"
                android:background="#f48e08" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/one"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#8afa51" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/two"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#f7f30b" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/three"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#8afa51" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/add"
                android:layout_weight="1"
                android:textSize="32dp"
                android:background="#f40824" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/zero"
                android:layout_weight="2"
                android:textSize="30dp"
                android:background="#f06ed2" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="."
                android:id="@+id/point"
                android:layout_weight="1"
                android:textSize="40dp"
                android:background="#f01633" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="="
                android:id="@+id/equal"
                android:layout_weight="1"
                android:textSize="31dp"
                android:background="#f48e08" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
